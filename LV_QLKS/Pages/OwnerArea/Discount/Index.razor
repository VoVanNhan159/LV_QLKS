@page "/discount/index"
@layout Layout_Owner

<div class="main-content">
    <div class="section__content section__content--p30">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        STT
                    </th>
                    <th>
                        Tên khuyến mãi
                    </th>
                    <th>
                        Thời gian lập
                    </th>
                    <th>
                        Ngày bắt đầu khuyến mãi
                    </th>
                    <th>
                        Ngày kết thúc khuyến mãi
                    </th>
                    <th>
                        Trạng thái
                    </th>
                    <th>

                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody> 
                @if(discounts.Count > 0)
                {
                    int stt = 1;
                    foreach (var item in discounts)
                    {
                        <tr>
                            <td>
                                @stt
                                @{
                                    stt++;
                                }
                            </td>
                            <td>
                                @item.DiscountName
                            </td>
                            <td>
                                @DateTime.Parse(item.DiscountDate.ToString()).ToString("dddd, dd MMMM yyyy", new System.Globalization.CultureInfo("vi-VN"))
                            </td>
                            <td>
                                @DateTime.Parse(item.DiscountDatestart.ToString()).ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("vi-VN"))
                            </td>
                            <td>
                                @DateTime.Parse(item.DiscountDateend.ToString()).ToString("dd MMMM yyyy", new System.Globalization.CultureInfo("vi-VN"))
                            </td>
                            <td>
                                @{
                                    if(item.DiscountDateend >= DateTime.Now)
                                    {
                                    <p style="color:limegreen">Đang khuyến mãi</p>
                                    }
                                    else
                                    {
                                        <p style="color:gray">Đã quá hạn</p>
                                    }
                                }
                            </td>
                            <td>
                                @if(item.DiscountDateend >= DateTime.Now)
                                {
                                    <RadzenButton ButtonStyle="ButtonStyle.Info" Icon="build" Class="m-1" Click=@(() => ShowEditDiscount(item.DiscountId)) />
                                }
                            </td>
                            <td>
                                @if (item.DiscountDateend >= DateTime.Now)
                                {
                                    <RadzenButton ButtonStyle="ButtonStyle.Warning" Icon="delete" Class="m-1" Click=@(() => DeleteDicount(item.DiscountId)) />
                                }
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

