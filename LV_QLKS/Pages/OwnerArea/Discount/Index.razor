                NavigationManager.NavigateTo("/discount/index");
            }
            else
            {
                NotificationService.Notify(new NotificationMessage { Severity = NotificationSeverity.Error, Summary = "Thành công", Detail = "Xóa không thành công", Duration = 4000 });
            }
        }
    }
}
